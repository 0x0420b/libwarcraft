<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Warcraft</RootNamespace>
    <AssemblyName>libwarcraft</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup>
    <Title>libwarcraft</Title>
    <Authors>Jarl Gullberg</Authors>
    <Version>2.0.1</Version>
    <Description>Managed library for interacting with binary file types made by Blizzard Entertainment.</Description>
    <Copyright>Copyright Jarl Gullberg 2017</Copyright>
  </PropertyGroup>
  <PropertyGroup>
    <PackageVersion>2.0.1-preview1</PackageVersion>
    <PackageId>libwarcraft</PackageId>
    <PackageLicenseUrl>https://www.gnu.org/licenses/gpl-3.0.en.html</PackageLicenseUrl>
    <PackageProjectUrl>http://wowdev.tools/</PackageProjectUrl>
    <PackageReleaseNotes>Initial release on NuGet and port to .NET Standard 2.0.</PackageReleaseNotes>
    <PackageTags>warcraft;cross-platform;file-format</PackageTags>
    <PackageOutputPath>../nuget</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <RepositoryUrl>https://github.com/WowDevTools/libwarcraft</RepositoryUrl>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ImageSharp">
      <Version>1.0.0-alpha9-00140</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.CSharp">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="SharpCompress" Version="0.17.1" />
    <PackageReference Include="System.Numerics.Vectors">
      <Version>4.4.0-preview1-25305-02</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="App.config" />
  </ItemGroup>
</Project>